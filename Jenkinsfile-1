pipeline {
	agent {
		docker {
			image 'ubuntu'
		}
	}
	stages {
		stage ('SCM Checkout') {
			steps {
				git branch: 'master', url: 'https://github.com/asifkhazi/docker-integration.git' 
			}
		}
		stage ('Build') {
			steps {
				sh 'echo "This is index.html page" >> sam.txt'
			}
		}
		stage ('Deploy') {
			steps {
				sh 'cat sam.txt' 
			}
		}
	}
}
