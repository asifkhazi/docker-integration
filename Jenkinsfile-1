pipeline {
	agent {
		docker {
			image 'ubuntu'
		}
	}
	stages {
		stage ('SCM Checkout') {
			steps {
				git branch: 'master', url: 'https://github.com/asifkhazi/docker-integration.git' 
			}
		}
		stage ('Build') {
			steps {
				sh 'sudo apt-get update && sudo apt-get install apach2 -y'
			}
		}
		stage ('Deploy') {
			steps {
				sh 'echo "This is index.html page">> /var/www/html/index.html' 
			}
		}
	}
}
